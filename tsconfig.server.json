{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": "./",
    "types": ["node"],   // Only Node types for the backend
    "skipLibCheck": true
  },
  "include": [
    "server/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "client",
    "node_modules",
    "dist",
    "build"
  ]
}
