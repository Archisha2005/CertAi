{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "../dist/server",
    "rootDir": "..",
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "./**/*.ts",
    "../shared/**/*.ts"
  ],
  "exclude": [
    "../dist",
    "../node_modules"
  ]
}
